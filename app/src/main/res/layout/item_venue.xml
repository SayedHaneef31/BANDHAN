<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:layout_marginBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Venue Image -->
        <ImageView
            android:id="@+id/ivVenueImage"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ven2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Price Chip -->
        <TextView
            android:id="@+id/tvPriceRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_price_chip"
            android:text="$20k - 30k"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="@id/ivVenueImage"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Venue Name -->
        <LinearLayout
            android:id="@+id/infoBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/ivVenueImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Venue details (Left side) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVenueName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Grand Ballroom"
                    android:textSize="16sp"
                    android:fontFamily="@font/roberto"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColor" />

                <TextView
                    android:id="@+id/tvVenueLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mumbai, India"
                    android:textSize="14sp"
                    android:textColor="@color/dark_grey" />

                <TextView
                    android:id="@+id/tvGuestRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100-200 guests"
                    android:textSize="12sp"
                    android:textColor="@color/dark_grey" />
            </LinearLayout>

            <!-- Shortlist Button (Right side, centered vertically) -->
            <Button
                android:id="@+id/btnShortlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shortlist"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryTextColor"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
