<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:background="@color/white">


        <TextView
            android:id="@+id/venueHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venues 💐"
            android:fontFamily="@font/playfair"
            android:textStyle="bold"
            android:textSize="28sp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="16dp"/>


    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_dialog"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/venueHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search_icon"
            app:tint="@color/secondaryTextColor" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search by name or location"
            android:background="@null"
            android:paddingStart="8dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/filterCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filters"
                android:fontFamily="@font/roberto_simple"
                android:textColor="@color/secondaryTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <!-- Budget Row -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"/>

            <SeekBar
                android:id="@+id/seekBudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="50"/>

            <TextView
                android:id="@+id/tvBudgetRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₹10k - ₹50k+"
                android:gravity="end"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <!-- Capacity Dropdown -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"/>

            <Spinner
                android:id="@+id/spinnerCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="16dp"
        android:id="@+id/recyclerVenues"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/filterCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

